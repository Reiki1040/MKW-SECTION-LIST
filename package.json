{
  "name": "mkw-section",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "rebuild": "electron-rebuild"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.6.3",
    "electron-rebuild": "^3.2.9"
  },
  "dependencies": {
    "konva": "^9.2.0",
    "quill": "^1.3.7"
  },
  "build": {
    "appId": "com.yourname.mkw-section-editor",
    "productName": "マリオカートワールド エディター",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "renderer.js",
      "style.css",
      "images/",
      "cources/",
      "node_modules/"
    ],
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
